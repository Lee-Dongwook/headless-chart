---
const url = new URL(Astro.request.url);
const pathname = url.pathname; // 현재 페이지의 경로

let current: "docs" | "tutorial" | "i18n" | "none" = pathname.startsWith("/docs")
  ? "docs"
  : pathname.startsWith("/tutorial")
    ? "tutorial"
    : pathname.startsWith("/i18n")
      ? "i18n"
      : "none";
---

<header class="flex w-full flex-col items-center justify-center bg-[#111111]">
  <div class="relative mx-auto inline-flex w-full items-center gap-8">
    <a href="/" class="flex flex-row gap-4">
      <img class="size-11 rounded-lg" src="/logo.jpeg" />
      <span class="hidden text-[32px] font-bold text-[#9370DB] md:block md:text-[32px]"
        >Flitter</span
      >
    </a>

    <nav
      class="md:-translate-1/2 ml-auto flex items-start justify-start gap-8 md:absolute md:left-1/2 md:ml-0"
    >
      <a
        class={`${current === "docs" ? "active" : ""}  text-base leading-normal text-gray-200`}
        href="/docs/introduction">docs</a
      >
      <a
        class={`${current === "tutorial" ? "active" : ""} select-none text-gray-200`}
        href="/tutorial/get-started/introduction">tutorial</a
      >
      <a
        class={`${current === "i18n" ? "active" : ""} text-base leading-normal text-gray-200`}
        href="/i18n">i18n</a
      >
    </nav>
    <div class="ml-auto hidden gap-4 md:flex">
      <a href="https://github.com/meursyphus/flitter">
        <img class="h-8 w-8 rounded-full invert" src="/github-mark.png" />
      </a>
      <a href="https://discord.gg/kUZp4SaHzF">
        <img
          class="h-8 w-8 rounded-full object-scale-down invert"
          src="/discord.png"
        />
      </a>
    </div>
  </div>
</header>

<style>
  header {
    height: var(--header);
  }
  header > div {
    max-width: var(--mx, 1920px);
    padding-inline: var(--px);
  }
  a.active {
    font-weight: bold;
    color: white !important;
  }
</style>

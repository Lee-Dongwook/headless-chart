---
const url = new URL(Astro.request.url);
const pathname = url.pathname; 

let current: "docs" | "charts" | "i18n" | "none" = pathname.startsWith("/docs")
  ? "docs"
  : pathname.startsWith("/charts")
    ? "charts"
    : pathname.startsWith("/i18n")
      ? "i18n"
      : "none";
---

<header class="header-container">
  <div class="header-inner">
    <a href="/" class="logo-area">
      <img class="logo-img" src="/logo.jpeg" alt="logo" />
      <span class="logo-text">Headless Chart</span>
    </a>

    <nav class="nav">
      <a
        class={`nav-link ${current === "docs" ? "active" : ""}`}
        href="/docs/introduction"
      >docs</a>
      <a
        class={`nav-link ${current === "charts" ? "active" : ""}`}
        href="/charts/get-started/introduction"
      >charts</a>
      <a
        class={`nav-link ${current === "i18n" ? "active" : ""}`}
        href="/i18n"
      >i18n</a>
    </nav>

    <div class="external-links">
      <a href="https://github.com/meursyphus/headless-chart">
        <img class="icon" src="/github-mark.png" alt="GitHub" />
      </a>
      <a href="https://discord.gg/kUZp4SaHzF">
        <img class="icon" src="/discord.png" alt="Discord" />
      </a>
    </div>
  </div>
</header>

<style>

.header-container {
  height: var(--header);
  width: 100%;
  position: sticky;
  top: 0;
  z-index: 999;
  
  /* 글래시모피즘 효과 */
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  box-shadow: 0 0 20px rgba(0,0,0,0.1);
}

.header-inner {
  max-width: var(--mx, 1920px);
  margin: 0 auto;
  height: 100%;
  padding-inline: var(--px);
  display: flex;
  align-items: center;
  gap: 2rem;
}

.logo-area {
  display: flex;
  align-items: center;
  gap: 1rem;
  text-decoration: none;
}

.logo-img {
  width: 44px;
  height: 44px;
  object-fit: cover;
  border-radius: 8px;
}

.logo-text {
  font-size: 1.5rem;
  font-weight: 700;
  color: #333;
  font-family: sans-serif;
}

.nav {
  display: flex;
  gap: 1.5rem;
  margin-left: auto; /* nav를 가운데 위치시키고 싶지 않을 경우 이 부분 조정 */
}

.nav-link {
  text-decoration: none;
  font-size: 1rem;
  color: #333;
  font-weight: 500;
  transition: color 0.3s ease;
  font-family: sans-serif;
  position: relative;
}

.nav-link:hover {
  color: #555;
}

.nav-link.active {
  color: #111;
  font-weight: 700;
}

.external-links {
  display: flex;
  gap: 1rem;
  margin-left: auto; /* nav를 가운데 정렬하고 external-links를 우측 정렬하기 위함 */
}

.icon {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  object-fit: contain;
  filter: invert(1); /* 어두운 배경에서 아이콘을 밝게 보이게 함 */
  transition: transform 0.2s;
}

.icon:hover {
  transform: scale(1.1);
}
</style>